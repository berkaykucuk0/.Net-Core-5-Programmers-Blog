@model ProgrammersBlog.Entities.Dtos.ArticleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Tüm Makaleler";
}
<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   Makaleler
                </h1>
                <p class="text-white link-nav"><a asp-controller="Home" asp-action="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span> <a asp-controller="Article" asp-action="GetAllArticles" >Tüm Makaleler</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<div class="container">
    <div class="row">
        <div class="col-lg-8">
            <section class="events-list-area section-gap event-page-lists">
                <div class="container">
                    <div class="row align-items-center">
                        @foreach (var article in Model.Articles)
                        {
                            <div class="col-lg-12 pb-30">
                                <div class="single-carusel row align-items-center">
                                    <div class="col-12 col-md-6 thumb">
                                        <img class="img-fluid" src="~/img/@article.Thumbnail" alt="">
                                    </div>
                                    <div class="detials col-12 col-md-6">
                                        <p>@article.CreateDate</p>
                                        <a href="event-details.html">
                                            <h4>
                                                @article.Title
                                            </h4>
                                        </a>
                                        <p>
                                            @if (article.Content.Length > 150)
                                            {
                                                @article.Content.Substring(0, 150)}
                                            else
                                            {
                                                @article.Content}
                                            ...
                                        </p>
                                        <a class="primary-btn text-uppercase mt-5" asp-controller="Article" asp-action="Detail" asp-route-articleId="@article.Id" type="button">Tümünü Gör</a>
                                    </div>
                                </div>

                            </div>

                        }

                    </div>
                </div>
            </section>
            <!-- End events-list Area -->

        </div>
        <div class="col-lg-4">
            @await Component.InvokeAsync("RightSideBar");
        </div>

    </div>
</div>