@model ProgrammersBlog.Mvc.Models.ArticleSearchViewModel
@{
    ViewBag.Title = "Arama Sonuçları";

}
<!-- start banner Area -->
<section class="banner-area relative" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen d-flex align-items-center justify-content-between">
            <div class="banner-content col-lg-9 col-md-12">
                <h1 class="text-uppercase">
                    Berkay Küçük Blog
                </h1>
                <p class="pt-10 pb-10">
                    In the history of modern astronomy, there is probably no one greater leap forward than the building and launch of the space telescope known as the Hubble.
                </p>

            </div>
        </div>
    </div>
</section>

<section class="upcoming-event-area section-gap">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Blog Yazıları</h1>
                    <p>Blog Yazıları</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-upcoming-event-carusel">
                @foreach (var article in Model.ArticleListDto.Articles)
                {
                    <div class="single-carusel row align-items-center">
                        <div class="col-12 col-md-6 thumb">
                            <img class="img-fluid" src="~/img/@article.Thumbnail" alt="">
                        </div>
                        <div class="detials col-12 col-md-6">
                            <p>@article.CreateDate.ToShortDateString()</p>
                            <a href="#">
                                <h4>

                                    @article.Title
                                </h4>
                            </a>
                            <p>
                                @if (article.Content.Length > 50)
                                {
                                    @article.Content.Substring(0, 75)
                                }
                                else
                                {
                                    @article.Content
                                }


                            </p>

                            <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@article.Id" type="button" class="btn btn-outline-primary mt-3">Daha Fazla...</a>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<section class="review-area section-gap relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-70 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">Blog Yorumları</h1>
                    <p>Blog Yorumları</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="active-review-carusel">
                <div class="single-review item">
                    <div class="title justify-content-start d-flex">
                        <a href="#"><h4>Fannie Rowe</h4></a>
                        <div class="star">
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star"></span>
                            <span class="fa fa-star"></span>
                        </div>
                    </div>
                    <p>
                        Accessories Here you can find the best computer accessory for your laptop, monitor, printer, scanner, speaker. Here you can find the best computer accessory for your laptop, monitor, printer, scanner, speaker.
                    </p>

                </div>
            </div>
        </div>
    </div>
</section>
