@model ProgrammersBlog.Mvc.Models.ArticleDetailRightSideBarViewModel
@{
}

    <!-- Categories Widget -->
    <div class="card my-4">
        <img src="~/img/@Model.User.Picture" class="card-img-top text-center img-thumbnail mt-1 mb-1" alt="@Model.User.UserName" />
        <h5 class="card-header text-center">@Model.User.UserName</h5>
        <div class="card-body">
            <p class="card-text text-center">@Model.User.About</p>
            <div class="card-footer text-center">
                <p>Sosyal Medya Linkleri</p>
                @if (Model.User.LinkedInLink != null)
                {
                    <a href="@Model.User.LinkedInLink" class="fa fa-linkedin"></a>
                }
                @if (Model.User.GitHubLink != null)
                {
                    <a href="@Model.User.GitHubLink" class="fa fa-github-square"></a>
                }
                @if (Model.User.FacebookLink != null)
                {
                    <a href="@Model.User.FacebookLink" class="fa fa-facebook"></a>
                }
                @if (Model.User.InstagramLink != null)
                {
                    <a href="@Model.User.InstagramLink" class="fa fa-instagram"></a>
                }
                @if (Model.User.TwitterLink != null)
                {
                    <a href="@Model.User.TwitterLink" class="fa fa-twitter"></a>
                }
                @if (Model.User.YoutubeLink != null)
                {
                    <a href="@Model.User.YoutubeLink" class="fa fa-youtube"></a>
                }
                @if (Model.User.WebsiteLink != null)
                {
                    <a href="@Model.User.WebsiteLink" class="fa fa-rss"></a>
                }
            </div>
        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header">@Model.Header</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-info">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
