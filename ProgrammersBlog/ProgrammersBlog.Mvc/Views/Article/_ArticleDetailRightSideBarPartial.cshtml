@model ProgrammersBlog.Mvc.Models.ArticleDetailRightSideBarViewModel
@{
}
<div class="widget-wrap">

    <div class="single-sidebar-widget user-info-widget">
        <img src="~/img/@Model.User.Picture" style="width:300px;height:300px;border-radius:50%" class="card-img-top text-center img-thumbnail mt-1 mb-1" alt="@Model.User.UserName" />
        <a href="#"><h4 style="font-size: 32px;">@Model.User.UserName</h4></a>
        <hr />
        <p class="mt-3 mb-4">
            @Model.User.About
        </p>
        <ul class="social-links">
            @if (Model.User.LinkedInLink != null)
            {
                <li><a href="@Model.User.LinkedInLink"><i class="fab fa-linkedin fa-3x"></i></a></li>
            }
            @if (Model.User.GitHubLink != null)
            {
                <li><a href="@Model.User.GitHubLink"><i class="fab fa-github fa-3x"></i></a></li>
            }
            @if (Model.User.FacebookLink != null)
            {
                <li><a href="@Model.User.FacebookLink"><i class="fab fa-facebook fa-3x"></i></a></li>
            }
            @if (Model.User.InstagramLink != null)
            {
                <li><a href="@Model.User.InstagramLink"><i class="fab fa-instagram-square fa-3x"></i></a></li>
            }
            @if (Model.User.TwitterLink != null)
            {
                <li><a href="@Model.User.TwitterLink" ><i class="fab fa-twitter fa-3x"></i></a></li>
            }
            @if (Model.User.YoutubeLink != null)
            {
                <li><a href="@Model.User.YoutubeLink"><i class="fab fa-youtube-square fa-3x"></i> </a></li>
            }
            @if (Model.User.WebsiteLink != null)
            {
                <li><a href="@Model.User.WebsiteLink"><i class="far fa-address-book fa-3x"></i></a></li>
            }
        </ul>
    </div>
    <div class="single-sidebar-widget popular-post-widget">
        <h4 class="popular-title">@Model.Header</h4>
        <div class="popular-post-list">
            @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
            {
                <div class="single-post-list d-flex flex-row align-items-center">
                    <div class="thumb">
                        <img class="img-fluid"  src="~/img/@Model.ArticleListDto.Articles[i].Thumbnail" alt="">
                    </div>
                    <div class="details">
                        <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                        <p>@Model.ArticleListDto.Articles[i].CreateDate.ToShortDateString()</p>
                    </div>
                </div>
            }

        </div>
    </div>
   
</div>
