@model ProgrammersBlog.Mvc.Models.ContactViewModel
@{
    Layout = "_LayoutAbout";
    ViewBag.Title = "İletişim";

    ViewBag.Tags = "ProgrammersBlog,C#,C++,Javascript";
    ViewBag.Author = "ProgrammersBlog";
    ViewBag.Description = "Bizlerle iletişime geçin";
}

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                    İletişim
                </h1>
                <p class="text-white link-nav"><a asp-controller="Home" asp-action="Index">Anasayfa </a>  <span class="lnr lnr-arrow-right"></span>  <a asp-controller="Home" asp-action="Contact">İletişim</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="margin-bottom:170px">
               @Html.Raw(Model.ContactDto.Contact.MapIframe)
            </div>
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-home"></span>
                    </div>
                    <div class="contact-details mt-1">
                        <h4>@Model.ContactDto.Contact.Address</h4>                       
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-phone-handset"></span>
                    </div>
                    <div class="contact-details mt-2">
                        <h4>@Model.ContactDto.Contact.Telephone</h4>                        
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details mt-2">
                        <h4>@Model.ContactDto.Contact.Email</h4>
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="form-area contact-form text-right" asp-controller="Home" asp-action="Contact" method="post">
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <input placeholder="İsminiz" asp-for="EmailSendDto.Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'İsminiz'" class="common-input mb-20 form-control" type="text"><span class="text-danger" asp-validation-for="EmailSendDto.Name"></span>

                            <input placeholder="E-mail Adresiniz" asp-for="EmailSendDto.Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'E-mail Adresiniz'" class="common-input mb-20 form-control"   type="email"><span class="text-danger" asp-validation-for="EmailSendDto.Email"></span>

                            <input  placeholder="Konu" asp-for="EmailSendDto.Subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Konu'" class="common-input mb-20 form-control"  type="text"><span class="text-danger" asp-validation-for="EmailSendDto.Subject"></span>
                        </div>
                        <div class="col-lg-6 form-group">
                            <textarea class="common-textarea form-control" asp-for="EmailSendDto.Message"  placeholder="Mesajınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mesajınız'" ></textarea><span class="text-danger" asp-validation-for="EmailSendDto.Message"></span>
                        </div>
                        <div class="col-lg-12">
                            <div class="alert-msg" style="text-align: left;"></div>
                            <button type="submit" class="mt-40 text-uppercase genric-btn primary text-center" id="btnSave">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
