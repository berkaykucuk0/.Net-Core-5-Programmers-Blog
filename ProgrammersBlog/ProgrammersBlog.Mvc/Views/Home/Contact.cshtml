@model ProgrammersBlog.Entities.Dtos.EmailSendDto
@{
    Layout = "_LayoutAbout";
    ViewBag.Title = "İletişim";

    ViewBag.Tags = "ProgrammersBlog,C#,C++,Javascript";
    ViewBag.Author = "ProgrammersBlog";
    ViewBag.Description = "Bizlerle iletişime geçin";
}

<!-- start banner Area -->
<section class="banner-area relative about-banner" id="home">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row d-flex align-items-center justify-content-center">
            <div class="about-content col-lg-12">
                <h1 class="text-white">
                   İletişim
                </h1>
                <p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href="contact.html"> İletişim</a></p>
            </div>
        </div>
    </div>
</section>
<!-- End banner Area -->
<!-- Start contact-page Area -->
<section class="contact-page-area section-gap">
    <div class="container">
        <div class="row">
            @*<div class="map-wrap" style="width:100%; height: 445px;" id="map"></div>*@
            <div class="col-lg-4 d-flex flex-column address-wrap">
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-home"></span>
                    </div>
                    <div class="contact-details">
                        <h5>Ataşehir/İstanbul</h5>
                        <p>
                           Esatpaşa Mahallesi Yağmur Sokak No 42/5
                        </p>
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-phone-handset"></span>
                    </div>
                    <div class="contact-details">
                        <h5>0 (535) 013 25 52</h5>                        
                    </div>
                </div>
                <div class="single-contact-address d-flex flex-row">
                    <div class="icon">
                        <span class="lnr lnr-envelope"></span>
                    </div>
                    <div class="contact-details">
                        <h5>berkay.kucuk@ogr.sakarya.edu.tr</h5>
                       
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <form class="form-area contact-form text-right" asp-controller="Home" asp-action="Contact" method="post">
                    <div class="row">
                        <div class="col-lg-6 form-group">
                            <input placeholder="İsminiz" asp-for="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'İsminiz'" class="common-input mb-20 form-control" type="text"><span class="text-danger" asp-validation-for="Name"></span>

                            <input placeholder="E-mail Adresiniz" asp-for="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'E-mail Adresiniz'" class="common-input mb-20 form-control"   type="email"><span class="text-danger" asp-validation-for="Email"></span>

                            <input  placeholder="Konu" asp-for="Subject" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Konu'" class="common-input mb-20 form-control"  type="text"><span class="text-danger" asp-validation-for="Subject"></span>
                        </div>
                        <div class="col-lg-6 form-group">
                            <textarea class="common-textarea form-control" asp-for="Message"  placeholder="Mesajınız" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mesajınız'" ></textarea><span class="text-danger" asp-validation-for="Message"></span>
                        </div>
                        <div class="col-lg-12">
                            <div class="alert-msg" style="text-align: left;"></div>
                            <button type="submit" class="btn btn-success" style="background-color:darkorange">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

