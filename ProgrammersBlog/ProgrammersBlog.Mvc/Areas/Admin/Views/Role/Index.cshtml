@using ProgrammersBlog.Shared.IUtilites.Results.ComplexTypes
@model ProgrammersBlog.Entities.Dtos.RoleListDto
@{
    Layout = "_Layout";
    ViewBag.Title = "Roller Index";
}

<ol class="breadcrumb mb-4 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Role" asp-action="Index">Roller</a></li>
</ol>
@if (Model.ResultStatus == ResultStatus.Success)
{
    <div id="modalPlaceHolder" aria-hidden="true"></div>
    <div class="card mb-4 mt-2">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Roller
        </div>
        <div class="card-body">
            <div class="spinner-border" role="status" style="display:none;">
                <span class="sr-only">Loading...</span>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" id="rolesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Rol Adı</th>
                            
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                        <tr name="@role.Id">
                            <td>@role.Id</td>
                            <td>@role.Name</td>                                                 
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
@if (Model.ResultStatus == ResultStatus.Error)
{
    <div class="alert alert-danger mt-3">
        @Model.Message <br />
        Dashboard sayfasına geri dönmek için lütfen <a class="alert-link" asp-area="Admin" asp-controller="Home" asp-action="Index">tıklayınız.</a>
    </div>
}

@section Scripts{

<script src="~/js/roleIndex.js" type="application/ecmascript"></script>
}

