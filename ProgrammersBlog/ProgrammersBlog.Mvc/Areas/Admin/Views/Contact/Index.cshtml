@model ProgrammersBlog.Entities.Dtos.ContactDto

@{
    Layout = "_Layout";
    ViewBag.Title = "İletişim Sayfası İçerikleri";

}
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <div class="card mt-4 mb-1">
            <div class="card-header">
                <h4 class="text-center"><span class="fas fa-edit"></span> İletişim Sayfa İçerikleri</h4>
            </div>
            <div class="card-body">
                <form asp-controller="Contact" asp-action="Index" method="post">
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary"></div>
                    <div class="form-row">
                        <input type="hidden" asp-for="Contact.Id" />
                        <div class="form-group col-md-12">
                            <label asp-for="Contact.Address"></label>
                            <input class="form-control" asp-for="Contact.Address" placeholder="Lütfen adres bilgisini giriniz." />
                            <span class="text-danger" asp-validation-for="Contact.Address"></span>
                        </div>
                        <div class="form-group col-md-12">
                            <label asp-for="Contact.MapIframe"></label>
                            <textarea class="form-control" asp-for="Contact.MapIframe" placeholder="Lütfen Google Harita bilgisini giriniz." rows="6"></textarea>
                            <span class="text-danger" asp-validation-for="Contact.MapIframe"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Contact.Telephone"></label>
                            <input type="text" class="form-control" asp-for="Contact.Telephone" placeholder="Lütfen telefon bilgisini giriniz." />
                            <span class="text-danger" asp-validation-for="Contact.Telephone"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Contact.Email"></label>
                            <input type="email" class="form-control" asp-for="Contact.Email" placeholder="Lütfen  E-posta adresini giriniz." />
                            <span class="text-danger" asp-validation-for="Contact.Email"></span>
                        </div>                      
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-primary"><span class="fas fa-save"></span> Kaydet</button>
                            <a class="btn btn-danger" asp-area="Admin" asp-controller="Home" asp-action="Index"><span class="fas fa-times"></span> İptal</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
